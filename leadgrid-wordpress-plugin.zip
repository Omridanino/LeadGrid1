                if (event.data.type === 'leadgrid_save_page') {
                    savePageToWordPress(event.data.pageData);
                } else if (event.data.type === 'leadgrid_close_editor') {
                    window.location.href = '<?php echo admin_url("admin.php?page=leadgrid"); ?>';
                }
            });
