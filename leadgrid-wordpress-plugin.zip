                    alert('×©×’×™××” ×‘×©××™×¨×ª ×”×“×£: ' + data.data);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('××™×¨×¢×” ×©×’×™××” ×‘×©××™×¨×ª ×”×“×£');
            });
        }
